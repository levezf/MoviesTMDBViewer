<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">


        <com.levez.d2u.categoryhorizontalview.CategoryHorizontalView
            android:id="@+id/chv_movie_favorite"
            app:title="Movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.levez.d2u.categoryhorizontalview.CategoryHorizontalView
            android:id="@+id/chv_tv_series_favorite"
            app:title="Tv Series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.levez.d2u.categoryhorizontalview.CategoryHorizontalView
            android:id="@+id/chv_people_favorite"
            app:title="People"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>




    <LinearLayout
        android:id="@+id/place_holder_empty"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_not_found_favorites"
            android:tint="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView

            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/text_no_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</FrameLayout>




